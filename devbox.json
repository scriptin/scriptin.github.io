{
  "packages": [
    "ruby@2.7.4",
    "bundler@2.1.4",
    "nodejs@22.3.0"
  ],
  "shell": {
    "init_hook": [
      "bundle install",
      "npm ci"
    ],
    "scripts": {
      "serve": [
        "bundle exec $GEM_HOME/bin/jekyll serve --livereload --drafts --unpublished --future --host 0.0.0.0 --port 4000 --config _config.yml,_config_dev.yml"
      ],
      "styles:build": [
        "npm run styles:build"
      ],
      "styles:watch": [
        "npm run styles:watch"
      ]
    }
  }
}
